{
  "name": "parcel-easy-boilerplate",
  "version": "1.0.0",
  "description": "Parcel Easy Boilerplate",
  "main": "src/index.njk",
  "scripts": {
    "dev": "NODE_ENV=development parcel src/index.njk --open",
    "prebuild": "rimraf dist/*",
    "build": "NODE_ENV=production npm run validate && parcel build src/index.njk --no-cache",
    "serve": "npm run build && npx serve dist",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.js --fix",
    "lint:css": "stylelint './src/**/*.+(css|scss)'",
    "prettier": "prettier \"src/**/*.+(js|html|css|scss|json|md|yml|yaml|md)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run lint && npm run prettier -- --list-different",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aarongarciah/parcel-easy-boilerplate.git"
  },
  "keywords": [
    "parcel",
    "boilerplate"
  ],
  "author": "Aarón García Hervás <aarongarciahervas@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aarongarciah/parcel-easy-boilerplate/issues"
  },
  "homepage": "https://github.com/aarongarciah/parcel-easy-boilerplate/",
  "devDependencies": {
    "autoprefixer": "^9.5.0",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "modern-normalize": "^0.5.0",
    "nunjucks": "^3.2.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-nunjucks": "^1.1.0",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "prettier": "1.16.4",
    "rimraf": "^2.6.3",
    "sass": "^1.17.3",
    "sass-mq": "^5.0.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.4"
  }
}
